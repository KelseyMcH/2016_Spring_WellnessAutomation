<% if @user.errors.any? %>
  <div class="col-md-2"></div>
  <div id="error_explanation col-md-8">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <div class="col-md-2"></div>
<% end %>