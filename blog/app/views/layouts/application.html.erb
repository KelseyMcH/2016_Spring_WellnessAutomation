<!DOCTYPE html>
<html>
<head>
  <title>Wellness Tracker</title>

  <%= csrf_meta_tags %>
    <!-- Latest compiled and minified CSS -->

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
</head>
<body>


<%= render :partial => 'layouts/header' %>

<!-- render flash messages, a quick way to give feedback about activity -->




<!-- Generate individual page content -->
<div class="generatecontent">
   <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %> <span class="glyphicon glyphicon-remove-sign"></span> </div>
  <% end %>

<%= yield %>
</div>


<%= render :partial => 'layouts/footer'%>

<!-- script to hide alerts -->
<script> 
$(document).ready(function(){
        $('.alert').click(function(){
          $('.alert').css('display', 'none');
        });
});
</script>
</body>
</html>
